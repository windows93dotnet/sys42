{
  name: "TextEdit",
  command: "textedit",
  categories: ["utilities", "productivity", "development"],
  description: "A simple text editor using textarea",

  width: "300px",
  height: "300px",

  decode: {
    types: [
      {
        description: "Text",
        accept: [
          "text/*",
          "application/json",
          "application/rss+xml",
          "application/xml",
        ],
      },
    ],
  },

  menubar: [
    {
      label: "New",
      picto: "file",
      id: "menuItem-newFile",
      shortcut: "Ctrl+N",
      // click: "{{editor.newFile(}}",
      click: "{{$files/0/path = undefined}}",
    },
    {
      label: "Save",
      picto: "save",
      shortcut: "Ctrl+S",
      id: "menuItem-saveFile",
      // click: "{{editor.saveFile()}}",
      click: "{{filePicker.save($files/0/path, $files/0/data)}}",
    },
  ],

  content: {
    scope: "/$files/0",
    content: {
      tag: "textarea",
      label: "{{path}}",
      class: "w-full {{monospace ? 'font-mono' : ''}}",
      spellcheck: "{{spellcheck}}",
      wrap: "{{wrap ? 'soft' : 'off'}}",
      prose: false,
      compact: true,
      autofocus: true,

      value: "{{source(path)}}",
      on: { input: "{{data = target.value}}" },
    },
  },

  state: {
    monospace: true,
    spellcheck: false,
    wrap: true,
  },
}
