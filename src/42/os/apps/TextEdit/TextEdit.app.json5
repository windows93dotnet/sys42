{
  name: "TextEdit",
  command: "textedit",
  categories: ["utilities", "productivity", "development"],
  description: "A simple text editor using textarea",

  width: "800px",
  height: "200px",

  decode: {
    types: [
      {
        description: "Text",
        accept: [
          "text/*",
          "application/json",
          "application/rss+xml",
          "application/xml",
        ],
      },
    ],
  },

  menubar: [
    {
      label: "File",
      id: "file",
      content: [
        {
          label: "New",
          picto: "file",
          shortcut: "Ctrl+N",
          click: "{{io.new()}}",
        },
        {
          label: "Openâ€¦",
          picto: "folder-open",
          shortcut: "Ctrl+O",
          id: "open",
          click: "{{io.open()}}",
        },
        {
          label: "Save",
          picto: "save",
          shortcut: "Ctrl+S",
          id: "save",
          click: "{{io.save()}}",
        },
      ],
    },
  ],

  content: {
    scope: "$files/0",
    content: {
      scope: "text",
      tag: "textarea",
      label: "{{path}}",
      value: "{{text ? text : source(path)}}",
      class: "w-full {{/monospace ? 'font-mono' : ''}}",
      spellcheck: "{{/spellcheck}}",
      wrap: "{{/wrap ? 'soft' : 'off'}}",
      prose: false,
      compact: true,
      autofocus: true,
    },
  },

  state: {
    monospace: true,
    spellcheck: false,
    wrap: true,
  },
}
