{
  name: "ImageViewer",
  command: "viewer",
  categories: ["utilities", "entertainment"],

  decode: {
    types: [
      { description: "Image", accept: "image/*" }, //
    ],
  },

  menubar: [{ $ref: "FileMenu" }],

  content: [
    {
      tag: ".box-center.scroll-1.max-w-full.inset.checkboard",
      content: {
        tag: "img",
        style: {
          "object-fit": "{{display}}",
          "image-rendering": "{{pixelated ? 'pixelated' : 'auto'}}",
          "height": "{{display !== '100%' ? '100%' : 'auto'}}",
          "width": "{{display !== '100%' ? '100%' : 'auto'}}",
          "max-width": "none",
        },
        src: "{{$files/0/url}}",
        on: {
          load: "{{width = target.naturalWidth; height = target.naturalHeight}}",
        },
      },
    },
    {
      tag: "footer.d-flex.gap.mt-xs.pl-sm.inset-shallow",
      content: [
        { tag: "checkbox", bind: "pixelated" },
        {
          tag: ".solid.ml-auto",
          content: "{{width}}x{{height}}",
        },
        {
          tag: "select",
          bind: "display",
          compact: true,
          content: ["100%", "contain", "cover"],
        },
      ],
    },
  ],

  state: {
    height: 0,
    width: 0,
    pixelated: true,
    display: "100%",
  },
}
